<form action="/patrons" method="post">
  <div class="form-group">
    <label for="newPatron">Enter a Patron Name</label>
    <input type="text" name="newPatron" class="form-control" id="newPatron" placeholder="Patron Name" required>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>



<h3>Book Titles</h3>
#foreach ($patron in $patrons)
<li><a href="/patrons/$patron.getId()">$patron.getName()</a></li>
#end
